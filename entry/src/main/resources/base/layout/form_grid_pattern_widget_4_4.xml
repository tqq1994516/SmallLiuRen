<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#F4EEE2"
    ohos:remote="true">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:top_padding="10fp"
        >

        <Text
            ohos:id="$+id:date"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="20fp"
            ohos:text="2021-03-24"
            ohos:text_font="sans-serif-medium"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:week"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:date"
            ohos:text="星期"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:time"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:week"
            ohos:text="00:00:00"
            ohos:text_font="HwChinese-medium"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:top_margin="35fp"
        >

        <Text
            ohos:id="$+id:lunar_year"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="20fp"
            ohos:text="二〇二一"
            ohos:text_font="sans-serif-medium"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:lunar_month"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:lunar_year"
            ohos:text="六"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:lunar_day"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:lunar_month"
            ohos:text="廿五"
            ohos:text_font="HwChinese-medium"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:solarTerms"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:lunar_day"
            ohos:text="立春"
            ohos:text_font="HwChinese-medium"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:top_margin="60fp">

        <Text
            ohos:id="$+id:ganzhi_year"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="15fp"
            ohos:text="甲子年"
            ohos:text_font="HwChinese-medium"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:ganzhi_month"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:ganzhi_year"
            ohos:text="甲子月"
            ohos:text_font="HwChinese-medium"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:ganzhi_day"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:ganzhi_month"
            ohos:text="甲子日"
            ohos:text_font="HwChinese-medium"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:ganzhi_time"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:ganzhi_day"
            ohos:text="子时"
            ohos:text_font="HwChinese-medium"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="180fp"
        ohos:width="match_parent"
        ohos:background_element="$media:base"
        ohos:orientation="horizontal"
        ohos:top_margin="75fp"
        >

        <DirectionalLayout
            ohos:id="$+id:aided_directionalLayout"
            ohos:height="180fp"
            ohos:width="30fp"
            ohos:orientation="vertical"
            ohos:left_margin="40fp">

            <Image
                ohos:id="$+id:aided_label"
                ohos:height="60fp"
                ohos:width="30fp"
                ohos:image_src="$media:aided"
                ohos:scale_mode="clip_center"
                ohos:top_margin="25fp">
            </Image>

            <Image
                ohos:id="$+id:aided_flag"
                ohos:height="40fp"
                ohos:width="30fp"
                ohos:below="$id:aided_label"
                ohos:image_src="$media:yang"
                ohos:scale_mode="clip_center"
                ohos:top_margin="5fp">
            </Image>

        </DirectionalLayout>

        <Image
            ohos:id="$+id:aided"
            ohos:height="100fp"
            ohos:width="50fp"
            ohos:image_src="$media:suxi"
            ohos:right_of="$id:aided_directionalLayout"
            ohos:scale_mode="clip_center"
            ohos:scale_y="1.2"
            ohos:top_margin="35fp">
        </Image>

        <DirectionalLayout
            ohos:id="$+id:assistant_directionalLayout"
            ohos:height="180fp"
            ohos:width="30fp"
            ohos:orientation="vertical">

            <Image
                ohos:id="$+id:assistant_label"
                ohos:height="60fp"
                ohos:width="30fp"
                ohos:image_src="$media:assistant"
                ohos:right_of="$id:aided"
                ohos:scale_mode="clip_center"
                ohos:top_margin="25fp">
            </Image>

            <Image
                ohos:id="$+id:assistant_flag"
                ohos:height="40fp"
                ohos:width="30fp"
                ohos:below="$id:assistant_label"
                ohos:image_src="$media:yang"
                ohos:scale_mode="clip_center"
                ohos:top_margin="5fp">
            </Image>

        </DirectionalLayout>


        <Image
            ohos:id="$+id:assistant"
            ohos:height="100fp"
            ohos:width="50fp"
            ohos:image_src="$media:daan"
            ohos:right_of="$id:assistant_directionalLayout"
            ohos:scale_mode="clip_center"
            ohos:scale_y="1.2"
            ohos:top_margin="35fp">
        </Image>

        <DirectionalLayout
            ohos:id="$+id:main_directionalLayout"
            ohos:height="180fp"
            ohos:width="30fp"
            ohos:orientation="vertical">

            <Image
                ohos:id="$+id:main_label"
                ohos:height="40fp"
                ohos:width="30fp"
                ohos:image_src="$media:main"
                ohos:right_of="$id:assistant"
                ohos:scale_mode="clip_center"
                ohos:top_margin="15fp">
            </Image>

            <Image
                ohos:id="$+id:main_flag"
                ohos:height="40fp"
                ohos:width="30fp"
                ohos:below="$id:main_label"
                ohos:image_src="$media:yang"
                ohos:scale_mode="clip_center"
                ohos:top_margin="5fp">
            </Image>

        </DirectionalLayout>

        <Image
            ohos:id="$+id:main"
            ohos:height="100fp"
            ohos:width="50fp"
            ohos:image_src="$media:daan"
            ohos:right_of="$id:main_directionalLayout"
            ohos:scale_mode="clip_center"
            ohos:scale_y="1.2"
            ohos:top_margin="25fp">
        </Image>

    </DirectionalLayout>

</DependentLayout>