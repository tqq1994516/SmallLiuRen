<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#A4D3EE"
    ohos:remote="true">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:top_padding="10fp"
        >

        <Text
            ohos:id="$+id:date"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="20fp"
            ohos:text="2021-03-24"
            ohos:text_font="sans-serif-medium"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:week"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:date"
            ohos:text="星期"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:time"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:week"
            ohos:text="00:00:00"
            ohos:text_font="HwChinese-medium"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:top_margin="35fp"
        >

        <Text
            ohos:id="$+id:lunar_year"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="20fp"
            ohos:text="二〇二一"
            ohos:text_font="sans-serif-medium"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:lunar_mouth"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:lunar_year"
            ohos:text="六"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:lunar_day"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:lunar_mouth"
            ohos:text="廿五"
            ohos:text_font="HwChinese-medium"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:solarTerms"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:lunar_day"
            ohos:text="立春"
            ohos:text_font="HwChinese-medium"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:top_margin="60fp">

        <Text
            ohos:id="$+id:ganzhi_year"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="15fp"
            ohos:text="甲子年"
            ohos:text_font="HwChinese-medium"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:ganzhi_mouth"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:ganzhi_year"
            ohos:text="甲子月"
            ohos:text_font="HwChinese-medium"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:ganzhi_day"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:ganzhi_mouth"
            ohos:text="甲子日"
            ohos:text_font="HwChinese-medium"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:ganzhi_time"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:ganzhi_day"
            ohos:text="子时"
            ohos:text_font="HwChinese-medium"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="180fp"
        ohos:width="match_parent"
        ohos:background_element="$media:base"
        ohos:orientation="horizontal"
        ohos:top_margin="75fp"
        >

        <Image
            ohos:id="$+id:aided_label"
            ohos:height="60fp"
            ohos:width="20fp"
            ohos:left_margin="20fp"
            ohos:image_src="$media:aided"
            ohos:scale_mode="clip_center"
            ohos:top_margin="20fp">
        </Image>

        <Image
            ohos:id="$+id:aided"
            ohos:height="100fp"
            ohos:width="55fp"
            ohos:image_src="$media:daan"
            ohos:right_of="$id:aided_label"
            ohos:scale_mode="clip_center"
            ohos:scale_y="1.2"
            ohos:top_margin="30fp">
        </Image>

        <Image
            ohos:id="$+id:assistant_label"
            ohos:height="60fp"
            ohos:width="20fp"
            ohos:image_src="$media:assistant"
            ohos:right_of="$id:aided"
            ohos:scale_mode="clip_center"
            ohos:top_margin="20fp">
        </Image>

        <Image
            ohos:id="$+id:assistant"
            ohos:height="100fp"
            ohos:width="55fp"
            ohos:image_src="$media:daan"
            ohos:right_of="$id:assistant_label"
            ohos:scale_mode="clip_center"
            ohos:scale_y="1.2"
            ohos:top_margin="30fp">
        </Image>

        <Image
            ohos:id="$+id:main_label"
            ohos:height="60fp"
            ohos:width="20fp"
            ohos:image_src="$media:main"
            ohos:right_of="$id:assistant"
            ohos:scale_mode="clip_center"
            ohos:top_margin="5fp">
        </Image>

        <Image
            ohos:id="$+id:main"
            ohos:height="100fp"
            ohos:width="55fp"
            ohos:image_src="$media:daan"
            ohos:right_of="$id:main_label"
            ohos:scale_mode="clip_center"
            ohos:scale_y="1.2"
            ohos:top_margin="20fp">
        </Image>

        <Image
            ohos:id="$+id:destiny_label"
            ohos:height="60fp"
            ohos:width="20fp"
            ohos:image_src="$media:destiny"
            ohos:right_of="$id:main"
            ohos:scale_mode="clip_center"
            ohos:top_margin="20fp">
        </Image>

        <Image
            ohos:id="$+id:destiny"
            ohos:height="100fp"
            ohos:width="55fp"
            ohos:image_src="$media:daan"
            ohos:right_of="$id:destiny_label"
            ohos:scale_mode="clip_center"
            ohos:scale_y="1.2"
            ohos:top_margin="30fp">
        </Image>
    </DirectionalLayout>

<!--    <DirectionalLayout-->
<!--        ohos:width="match_parent"-->
<!--        ohos:height="match_parent">-->

<!--    </DirectionalLayout>-->
</DependentLayout>