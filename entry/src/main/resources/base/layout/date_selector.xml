<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:background_element="#ffffff">

    <DirectionalLayout
        ohos:id="$+id:toolbar"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:top_margin="5fp"
        ohos:bottom_margin="5fp">

        <Button
            ohos:id="$+id:tv_cancel"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="$string:cancel"
            ohos:text_size="18fp"
            ohos:text_alignment="center"
            ohos:text_color="#828282"
            ohos:layout_alignment="left"
            ohos:weight="1">
        </Button>

        <Text
            ohos:id="$+id:tv_title"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="$string:selectDateHint"
            ohos:text_alignment="center"
            ohos:text_size="14fp"
            ohos:layout_alignment="center"
            ohos:text_color="#000000"
            ohos:weight="1">
        </Text>

        <Button
            ohos:id="$+id:tv_confirm"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="$string:confirm"
            ohos:text_size="18fp"
            ohos:text_alignment="center"
            ohos:text_color="#1C86EE"
            ohos:layout_alignment="left"
            ohos:weight="1">
        </Button>

    </DirectionalLayout>

    <Image
        ohos:id="$+id:cross_line"
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:image_src="$graphic:cross_line">
    </Image>

    <DirectionalLayout
        ohos:top_margin="10fp"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal">

        <DatePicker
            ohos:id="$+id:date_pick"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:top_margin="10fp"
            ohos:below="$id:cross_line"
            ohos:background_element="#ffffff"
            ohos:selected_text_size="20fp"
            ohos:normal_text_size="15fp"
            ohos:selected_normal_text_margin_ratio="3"
            ohos:bottom_margin="10fp"
            ohos:weight="3">
        </DatePicker>

        <TimePicker
            ohos:id="$+id:time_pick"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:top_margin="10fp"
            ohos:below="$id:cross_line"
            ohos:background_element="#ffffff"
            ohos:mode_24_hour="true"
            ohos:minute="0"
            ohos:second="0"
            ohos:selected_text_size="20fp"
            ohos:normal_text_size="15fp"
            ohos:selected_normal_text_margin_ratio="3"
            ohos:bottom_margin="10fp"
            ohos:weight="1">
        </TimePicker>
    </DirectionalLayout>

</DirectionalLayout>