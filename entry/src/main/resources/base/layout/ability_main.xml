<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#F4EEE2"
    ohos:remote="true">

    <DirectionalLayout
        ohos:id="$+id:calendarType"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:top_margin="5fp">

        <RadioContainer
            ohos:id="$+id:calendarRadio"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:left_margin="20fp"
            ohos:layout_alignment="vertical_center">

            <RadioButton
                ohos:id="$+id:solarRadio"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="20fp"
                ohos:text="$string:solarRadioString"
                ohos:weight="1"
                ohos:marked="true">
            </RadioButton>

            <RadioButton
                ohos:id="$+id:lunarRadio"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="20fp"
                ohos:right_of="$id:solarRadio"
                ohos:text="$string:lunarRadioString"
                ohos:weight="1">
            </RadioButton>
        </RadioContainer>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:id="$+id:dateSelectorLine"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:below="$id:calendarType"
        ohos:orientation="horizontal">

        <Text
            ohos:id="$+id:selectDateTabel"
            ohos:left_margin="20fp"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:hint="$string:selectDateTabel"
            ohos:text_font="sans-serif-medium"
            ohos:text_size="20fp"
            ohos:layout_alignment="center">
        </Text>

        <StackLayout
            ohos:id="$+id:dateSelector"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:right_of="$id:selectDateTabel"
            ohos:top_margin="5fp"
            ohos:right_margin="20fp">

            <TextField
                ohos:id="$+id:selectDate"
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:hint="$string:selectDateHint"
                ohos:left_padding="60vp"
                ohos:top_padding="8vp"
                ohos:bottom_padding="8vp"
                ohos:background_element="$graphic:data_select_background"
                ohos:enabled="false"
                ohos:text_size="20fp">
            </TextField>

            <Image
                ohos:layout_alignment="vertical_center|left"
                ohos:id="$+id:calendarIcon"
                ohos:height="30fp"
                ohos:width="30fp"
                ohos:image_src="$media:calendarIcon"
                ohos:scale_mode="clip_center"
                ohos:left_margin="20vp">
            </Image>
            <Image
                ohos:layout_alignment="vertical_center|right"
                ohos:id="$+id:refresh"
                ohos:height="30fp"
                ohos:width="30fp"
                ohos:image_src="$media:refresh"
                ohos:scale_mode="clip_center"
                ohos:right_margin="20vp">
            </Image>
        </StackLayout>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:id="$+id:timeLine"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:below="$id:dateSelectorLine"
        ohos:top_margin="5fp"
        >

        <Text
            ohos:id="$+id:date"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="20fp"
            ohos:text="2021-03-24"
            ohos:text_font="sans-serif-medium"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:week"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:date"
            ohos:text="星期"
            ohos:text_size="20fp"
            ohos:weight="1"
            ohos:text_alignment="horizontal_center">
        </Text>

        <Text
            ohos:id="$+id:time"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:week"
            ohos:text="00:00:00"
            ohos:text_font="HwChinese-medium"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:id="$+id:lunarTimeLine"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:below="$id:timeLine"
        >

        <Text
            ohos:id="$+id:lunar_year"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="20fp"
            ohos:text="二〇二一"
            ohos:text_font="sans-serif-medium"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:lunar_month"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:lunar_year"
            ohos:text="六"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:lunar_day"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:lunar_month"
            ohos:text="廿五"
            ohos:text_font="HwChinese-medium"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:solarTerms"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:lunar_day"
            ohos:text="立春"
            ohos:text_font="HwChinese-medium"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:id="$+id:ganzhiTimeLine"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:below="$id:lunarTimeLine"
        >

        <Text
            ohos:id="$+id:ganzhi_year"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="15fp"
            ohos:text="甲子年"
            ohos:text_font="HwChinese-medium"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:ganzhi_month"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:ganzhi_year"
            ohos:text="甲子月"
            ohos:text_font="HwChinese-medium"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:ganzhi_day"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:ganzhi_month"
            ohos:text="甲子日"
            ohos:text_font="HwChinese-medium"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:ganzhi_time"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:ganzhi_day"
            ohos:text="子时"
            ohos:text_font="HwChinese-medium"
            ohos:text_size="20fp"
            ohos:weight="1">
        </Text>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:id="$+id:assertLine"
        ohos:height="180fp"
        ohos:width="match_parent"
        ohos:background_element="$media:base"
        ohos:orientation="horizontal"
        ohos:below="$id:ganzhiTimeLine"
        >

        <DirectionalLayout
            ohos:id="$+id:aided_directionalLayout"
            ohos:height="180fp"
            ohos:width="30fp"
            ohos:orientation="vertical"
            ohos:left_margin="40fp">

            <Image
                ohos:id="$+id:aided_label"
                ohos:height="60fp"
                ohos:width="30fp"
                ohos:image_src="$media:aided"
                ohos:scale_mode="clip_center"
                ohos:top_margin="25fp">
            </Image>

            <Image
                ohos:id="$+id:aided_flag"
                ohos:height="40fp"
                ohos:width="30fp"
                ohos:below="$id:aided_label"
                ohos:image_src="$media:yang"
                ohos:scale_mode="clip_center"
                ohos:top_margin="5fp">
            </Image>

        </DirectionalLayout>

        <Image
            ohos:id="$+id:aided"
            ohos:height="100fp"
            ohos:width="50fp"
            ohos:image_src="$media:suxi"
            ohos:right_of="$id:aided_directionalLayout"
            ohos:scale_mode="clip_center"
            ohos:scale_y="1.2"
            ohos:top_margin="35fp">
        </Image>

        <DirectionalLayout
            ohos:id="$+id:assistant_directionalLayout"
            ohos:height="180fp"
            ohos:width="30fp"
            ohos:orientation="vertical">

            <Image
                ohos:id="$+id:assistant_label"
                ohos:height="60fp"
                ohos:width="30fp"
                ohos:image_src="$media:assistant"
                ohos:right_of="$id:aided"
                ohos:scale_mode="clip_center"
                ohos:top_margin="25fp">
            </Image>

            <Image
                ohos:id="$+id:assistant_flag"
                ohos:height="40fp"
                ohos:width="30fp"
                ohos:below="$id:assistant_label"
                ohos:image_src="$media:yang"
                ohos:scale_mode="clip_center"
                ohos:top_margin="5fp">
            </Image>

        </DirectionalLayout>


        <Image
            ohos:id="$+id:assistant"
            ohos:height="100fp"
            ohos:width="50fp"
            ohos:image_src="$media:daan"
            ohos:right_of="$id:assistant_directionalLayout"
            ohos:scale_mode="clip_center"
            ohos:scale_y="1.2"
            ohos:top_margin="35fp">
        </Image>

        <DirectionalLayout
            ohos:id="$+id:main_directionalLayout"
            ohos:height="180fp"
            ohos:width="30fp"
            ohos:orientation="vertical">

            <Image
                ohos:id="$+id:main_label"
                ohos:height="40fp"
                ohos:width="30fp"
                ohos:image_src="$media:main"
                ohos:right_of="$id:assistant"
                ohos:scale_mode="clip_center"
                ohos:top_margin="15fp">
            </Image>

            <Image
                ohos:id="$+id:main_flag"
                ohos:height="40fp"
                ohos:width="30fp"
                ohos:below="$id:main_label"
                ohos:image_src="$media:yang"
                ohos:scale_mode="clip_center"
                ohos:top_margin="5fp">
            </Image>

        </DirectionalLayout>

        <Image
            ohos:id="$+id:main"
            ohos:height="100fp"
            ohos:width="50fp"
            ohos:image_src="$media:daan"
            ohos:right_of="$id:main_directionalLayout"
            ohos:scale_mode="clip_center"
            ohos:scale_y="1.2"
            ohos:top_margin="25fp">
        </Image>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:id="$+id:detailLine1"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:below="$id:assertLine"
        >

        <Text
            ohos:id="$+id:deityLabel"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="10fp"
            ohos:text="神兽："
            ohos:text_font="sans-serif-medium"
            ohos:text_size="14fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:deity"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:deityLabel"
            ohos:text="青龙"
            ohos:text_font="sans-serif-medium"
            ohos:text_size="14fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:fiveElementsLabel"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:deity"
            ohos:text="五行："
            ohos:text_font="sans-serif-medium"
            ohos:text_size="14fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:fiveElements"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:fiveElementsLabel"
            ohos:text="木"
            ohos:text_font="sans-serif-medium"
            ohos:text_size="14fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:dominantAffairLabel"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:fiveElements"
            ohos:text="显宫："
            ohos:text_font="sans-serif-medium"
            ohos:text_size="14fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:dominantAffair"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:dominantAffairLabel"
            ohos:text="事业宫"
            ohos:text_font="sans-serif-medium"
            ohos:text_size="14fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:magnateOrientationLabel"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:organ"
            ohos:text="贵人："
            ohos:text_font="sans-serif-medium"
            ohos:text_size="14fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:magnateOrientation"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:magnateOrientationLabel"
            ohos:text="西南"
            ohos:text_font="sans-serif-medium"
            ohos:text_size="14fp"
            ohos:weight="1">
        </Text>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:id="$+id:detailLine2"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:below="$id:detailLine1"
        >

        <Text
            ohos:id="$+id:luckyNumLabel"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="10fp"
            ohos:text="排数："
            ohos:text_font="sans-serif-medium"
            ohos:text_size="14fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:luckyNum"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:luckyNumLabel"
            ohos:text="1,4,5"
            ohos:text_font="sans-serif-medium"
            ohos:text_size="14fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:representativeLabel"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:luckyNum"
            ohos:text="代表："
            ohos:text_font="sans-serif-medium"
            ohos:text_size="14fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:representative"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:representativeLabel"
            ohos:text="森林木"
            ohos:text_font="sans-serif-medium"
            ohos:text_size="14fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:recessiveAffairLabel"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:representative"
            ohos:text="藏宫："
            ohos:text_font="sans-serif-medium"
            ohos:text_size="14fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:recessiveAffair"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:recessiveAffairLabel"
            ohos:text="命运宫"
            ohos:text_font="sans-serif-medium"
            ohos:text_size="14fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:offendOrientationLabel"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:recessiveAffair"
            ohos:text="冲犯："
            ohos:text_font="sans-serif-medium"
            ohos:text_size="14fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:offendOrientation"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:offendOrientationLabel"
            ohos:text="东"
            ohos:text_font="sans-serif-medium"
            ohos:text_size="14fp"
            ohos:weight="1">
        </Text>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:id="$+id:detailLine3"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:below="$id:detailLine2"
        >

        <Text
            ohos:id="$+id:organLabel"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:fiveElements"
            ohos:text="器官："
            ohos:text_font="sans-serif-medium"
            ohos:left_margin="10fp"
            ohos:text_size="14fp"

            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:organ"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:right_of="$id:organLabel"
            ohos:text="四肢"
            ohos:text_font="sans-serif-medium"
            ohos:text_size="14fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:ghostsAndGodsLabel"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:right_of="$id:organ"
            ohos:text="神鬼："
            ohos:text_font="sans-serif-medium"
            ohos:text_size="14fp"
            ohos:weight="1">
        </Text>

        <Text
            ohos:id="$+id:ghostsAndGods"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:right_of="$id:ghostsAndGodsLabel"
            ohos:text="小孩婆姐六畜惊，大人青面阴神。"
            ohos:text_font="sans-serif-medium"
            ohos:text_size="14fp"
            ohos:weight="5">
        </Text>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:id="$+id:detailLine4"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:below="$id:detailLine3"
        >

        <Text
            ohos:id="$+id:assertText"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="10fp"
            ohos:text="大安事事昌，求财在坤方，失物去不远，宅舍保安康；行人身未动，病者主无妨，将军回田野，仔细兴推祥。"
            ohos:text_font="sans-serif-medium"
            ohos:multiple_lines="true"
            ohos:max_text_lines="2"
            ohos:text_size="13fp"
            ohos:weight="1">
        </Text>

    </DirectionalLayout>

</DependentLayout>